	<script>
		window.onload = function(){
			var time = new Date();
			var greetings = document.getElementById("greetings");
			var hours = time.getHours();
			if(hours>=6&&hours<=11){
				greetings.innerHTML = "张开双臂，拥抱每一个充满希望的早晨";
			}else if(hours>=12&&hours<=3){
				greetings.innerHTML = "午后的阳光明媚，有清丽的风闲闲吹过";
			}else {
				greetings.innerHTML = "每一天：伴着美梦入睡，带着目标醒来";
			}
		}
	</script>
